# Gtk applications settings
exec_always {
    gsettings set $gnomeschema gtk-theme 'Adwaita-blue-dark'
    gsettings set $gnomeschema icon-theme 'Tela-blue-dark'
    gsettings set $gnomeschema cursor-theme 'Breeze'
    gsettings set $gnomeschema font-name 'SF Pro Text Regular 10'
}

