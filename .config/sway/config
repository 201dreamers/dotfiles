### Variables ###

# Logo key
set $mod Mod4

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Workspace names
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7

# Terminal emulator
set $term xfce4-terminal

# Application launcher
set $menu wofi --show run --allow-images

# File manager
set $filer Thunar

# Browser
set $browser opera 

# For gtk applications settings
set $gnomeschema org.gnome.desktop.interface

# Set linemenu
# set $linemenu dmenu_path | dmenu | xargs swaymsg exec --

# Set shut down, restart and locking features
set $mode_system (l)ock, (e)xit, (s)uspend, (r)eboot, (Shift+s)hutdown

### Settings ###

# Font
font pango: SF Pro Text 10

# Borders
default_border pixel 1
hide_edge_borders both
smart_borders no_borders
smart_gaps on
gaps inner 8

# Default wallpaper (to change it, put image to ~/Pictures/wallpapers/ and name it main-wallpaper.*)
output * bg "/home/hydrogen/Pictures/wallpapers/main-wallpaper.*" fill

# Keyboard layout
input * {
    xkb_layout us,ua
    xkb_options grp:shift_caps_toggle
}

# Touchpad configuration (swaymsg -t get_inputs)
input "1739:30966:Synaptics_TM3096-006" {
    dwt enabled
    tap enabled
    natural_scroll enabled
    middle_emulation enabled
}

# Drag floating windows by holding down $mod and left mouse button.
# Resize them with right mouse button + $mod.
# Despite the name, also works for non-floating windows.
# Change normal to inverse to use left mouse button for resizing and right
# mouse button for dragging.
floating_modifier $mod normal

